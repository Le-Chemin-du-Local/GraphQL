  number: String
  route: String
  optionalRoute: String
  postalCode: String
  city: String
}

input NewAddress {
  number: String
  route: String
  optionalRoute: String
  postalCode: String
  city: String
}

input ChangesAddress {
  number: String 
  route: String 
  optionalRoute: String
  postalCode: String
  city: String
}

type Transfert {
  value: Float!
  ibanOwner: String!
  iban: String!
  bic: String!
}

##############
## SERVICES ##
##############

type ServiceInfo {
  id: String!
  name: String!
  shortDescription: String!
  longDescription: String!

  monthPrice: Float!
  monthMinimumAllowedCA: Float!
  monthRangePercentage: Float!
  monthAugmentationPerRangePercentage: Float!
  monthAdvantages: [String!]!

  transactionPercentage: Float!
  transactionAdvantages: [String!]!
}

input ChangesService {
  serviceID: String!
  updateType: String!
}

